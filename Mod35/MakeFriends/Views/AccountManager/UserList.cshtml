@model MakeFriends.ViewModels.Account.SearchViewModel;


<div class="block-reg background-white">
  <div class="friendbox">
    @if (Model.UserList.Count != 0)
    {
      @foreach (var user in @Model.UserList)
      {
        <div class="datadiv">
          <div class="mrgn center-align">
            <img src="@user.Image" class="ava"/>
          </div>
          <div class="mrgn center-align">
            @user.GetFullName()
          </div>
          @if (!@user.IsFriendWithCurrent)
          {
            <form class="mrgn center-align" asp-controller="AccountManager" asp-action="AddFriend" asp-route-id="@user.Id" method="post">
              <button type="submit" class="btn btn-sm btn-primary">
                Добавить в друзья
              </button>
            </form>
          }
        </div>
      }
    }
    else
    {
      <div>
        <label> Поиск не дал результатов.</label>
      </div>
    }


  </div>
</div>